{
  "name": "beresta-website",
  "version": "1.0.0",
  "description": "Official website for Beresta project - innovative sensory feedback technology",
  "main": "index.html",
  "scripts": {
    "dev": "concurrently \"npm run dev:site\" \"npm run dev:api\"",
    "dev:site": "vite",
    "dev:api": "cd app/api && npm run dev",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:site": "vite preview --port 8100",
    "start:api": "cd app/api && npm start",
    "build": "npm run build:site && npm run build:api",
    "build:site": "vite build",
    "build:api": "cd app/api && npm install --production",
    "build:prod": "npm run build:site && npm run install:prod",
    "install:prod": "npm install --production && cd app/api && npm install --production",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.html --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.html --fix --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo 'No tests specified'",
    "install:api": "cd app/api && npm install",
    "clean": "rimraf dist app/api/node_modules app/api/package-lock.json",
    "deploy:prepare": "npm run build:prod && npm run clean:temp",
    "clean:temp": "rimraf node_modules/.vite"
  },
  "keywords": [
    "beresta",
    "sensory-feedback",
    "tactile-interface",
    "technology",
    "website"
  ],
  "author": "Beresta Team",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "terser": "^5.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/beresta-website.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/beresta-website/issues"
  },
  "homepage": "https://your-username.github.io/beresta-website"
}
